{
    "custom/arch": {
        "format": " ",
        "tooltip": false,
        "on-click": "sh $HOME/.config/rofi/bin/powermenu"
    },
    "hyprland/workspaces": {
        "format": "{name}",
        "format": "{icon}",
        "tooltip": false,
        "all-outputs": true,
        "format-icons": {
            "active": "",
            "default": ""
        }
    },
    "clock": {
        "format": "<span color='#b4befe'> </span>{:%H:%M %d/%m/%y}",
    },
    "pulseaudio": {
        "format": "<span color='#b4befe'>{icon}</span> {volume}%",
        "format-muted": "",
        "tooltip": false,
        "format-icons": {
            "headphone": "",
            "default": ["", "", "󰕾", "󰕾", "󰕾", "", "", ""]
        },
        "scroll-step": 1,
        "on-click": "kitty -c 'pavucontrol'",
    },
    "network": {
        "interface": "wlan0",
        "format": "{ifname}",
        "format-wifi": "<span color='#b4befe'>  </span>{essid}",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "format-disconnected": "<span color='#b4befe'>󰖪 </span>No Network",
        "tooltip": false,
    },
}
